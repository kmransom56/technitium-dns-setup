# Technitium DNS Server Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# DNS Server Admin Password (CHANGE THIS!)
DNS_ADMIN_PASSWORD=secure-admin-password-2024

# Certificate Password for PFX files
CERT_PASSWORD=secure-cert-password-2024

# Domain names for SSL certificates
DOMAINS=dns.netintegrate.net,dns2.netintegrate.net

# Email for Let's Encrypt certificate registration
EMAIL=admin@netintegrate.net

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=grafana-admin-password

# Prometheus retention period
PROMETHEUS_RETENTION=30d

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup schedule (cron format)
# Default: Daily at 2 AM
BACKUP_SCHEDULE=0 2 * * *

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# Backup encryption password
BACKUP_PASSWORD=backup-encryption-password

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# External IP address for the DNS server
EXTERNAL_IP=192.168.1.100

# Internal network CIDR
INTERNAL_NETWORK=192.168.1.0/24

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum cache entries
CACHE_MAX_ENTRIES=100000

# Recursion timeout (milliseconds)
RECURSION_TIMEOUT=5000

# Recursion retries
RECURSION_RETRIES=2

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable DNSSEC validation
ENABLE_DNSSEC=true

# Enable DNS rebinding protection
ENABLE_DNS_REBIND_PROTECTION=true

# Enable query logging
LOG_QUERIES=true

# Log level (Debug, Info, Warning, Error)
LOG_LEVEL=Info

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# SMTP settings for alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@netintegrate.net
SMTP_PASSWORD=smtp-app-password
SMTP_FROM=dns-alerts@netintegrate.net
SMTP_TO=admin@netintegrate.net

# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom forwarders (comma separated)
CUSTOM_FORWARDERS=1.1.1.1,1.0.0.1,8.8.8.8,8.8.4.4

# Block list URLs (comma separated)
BLOCK_LIST_URLS=https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts

# Time zone
TIMEZONE=UTC

# Resource limits
MEMORY_LIMIT=1G
CPU_LIMIT=0.5
